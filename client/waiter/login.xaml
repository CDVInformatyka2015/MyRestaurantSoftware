<Window x:Class="waiter.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:waiter"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Zaloguj się do systemu!" Height="91.597" Width="300">
    <Grid>
        <TextBox x:Name="Login" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="72,3,0,0"/>
        <TextBox x:Name="Password" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="72,31,0,0"/>
        <Label x:Name="LoginLabel" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="PasswordLabel" Content="Password" HorizontalAlignment="Left" Margin="0,26,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Zaloguj" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="209,0,0,0" Height="54" Click="button_Click"/>
    </Grid>
</Window>
