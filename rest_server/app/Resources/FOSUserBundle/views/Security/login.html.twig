{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <h2 class="form-signin-heading">Zaloguj siÄ™</h2>
        <label for="username" class="sr-only">{{ 'security.login.username'|trans }}</label>
        <input type="text" class="form-control" id="username" placeholder="{{ 'security.login.username'|trans }}"
               name="_username" value="{{ last_username }}" required="required" autofocus>
        <label for="inputPassword" class="sr-only">{{ 'security.login.password'|trans }}</label>
        <input type="password" id="password" name="_password" required="required"
               class="form-control" placeholder="{{ 'security.login.password'|trans }}">
        <div class="checkbox">
            <label>
                <input type="checkbox" id="remember_me" name="_remember_me"> {{ 'security.login.remember_me'|trans }}
            </label>
        </div>
        <input class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit"
               value="{{ 'security.login.submit'|trans }}">
        {#<a class="btn btn-lg btn-secondary btn-block" href="{{ url('fos_user_registration_register') }}">#}
            {#{{ 'layout.register'|trans({}, 'FOSUserBundle') }}#}
        {#</a>#}
    </form>
{% endblock fos_user_content %}